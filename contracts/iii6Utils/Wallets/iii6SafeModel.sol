pragma solidity ^0.8.7;

import "./iii6SafeVoting.sol";
import "../Assets/iii6CoinModel.sol";
import "../Assets/iii6CoinFactory.sol";
import "../Misc/iii6Relations.sol";
import "../Misc/Errors/iii6Errors.sol";

contract iii6SafeModel is iii6Relations, iii6Errors {
    // list of trustees
    address TRUSTEE;
    iii6CoinModel BoardShares;
    iii6CoinFactory iii6Coins;
    // array of board members
    BoardMember[] public members;
    // board member id callback from address
    mapping(address => uint256) public memNum;
    // number of board members starting at 1
    uint256 bms;
    // max number of board members starting at 1
    /**
     * @dev allows only board members to use functions
     */
    modifier isMember() {
        if (memNum[msg.sender] == 0) revert Unauthorized();
        if (members[memNum[msg.sender]].adr != msg.sender)
            revert Unauthorized();
        _;
    }

    /**
     * @dev initializes safe contract that stores and distributes funds amongst boardmembers
     */
    constructor() {
        TRUSTEE = msg.sender; // first trust admin
        bms = 1; // number of board members
    }

    function makeShares(string memory _name, string memory _sym) external {
        if (msg.sender != TRUSTEE) revert Unauthorized();
        address _newShares = iii6Coins.buildERC20Token(
            _name,
            _sym,
            0,
            100000,
            false,
            false
        );
        BoardShares = iii6CoinModel(payable(_newShares));
        BoardShares.buyTokens(100000);
    }

    /**
     * @dev allows trustee to add board members to safe contract
     * @param _adr number of board members
     * @param _inf minimum share
     */
    function addMember(address _adr, string memory _inf)
        external
        returns (address)
    {
        if (msg.sender != TRUSTEE) revert Unauthorized();
        members[bms] = BoardMember(bms, _adr, 0, _inf);
        memNum[_adr] = bms;
        bms++;
        return _adr;
    }
}
